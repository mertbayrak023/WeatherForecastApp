@model WeatherForecastApp.Models.Contact

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>Weather Forecast App by Mert Bayrak</title>

    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
    <link href="fonts/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- Loading main css file -->
    <link rel="stylesheet" href="style.css">

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->

</head>


<body>

    <div class="site-content">
        <div class="site-header">
            <div class="container">
                <a href="~/Home/Index" class="branding">
                    <img src="~/images/logo.png" alt="" class="logo">
                    <div class="logo-type">
                        <h1 class="site-title">HAVA DURUMU TAHMİN UYGULAMASI</h1>
                        <small class="site-description">Beykoz Üniversitesi Yazılım Mühendisliği</small>
                    </div>
                </a>

                <!-- Default snippet for navigation -->
                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item">@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                        <li class="menu-item">@Html.ActionLink("Hakkımızda", "About", "Home")</li>
                        <li class="menu-item current-menu-item">@Html.ActionLink("İletişim", "CreateContact", "Home")</li>
                    </ul> <!-- .menu -->
                </div> <!-- .main-navigation -->

                <div class="mobile-navigation"></div>

            </div>
        </div> <!-- .site-header -->

        <main class="main-content">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/">Ana Sayfa</a>
                    <span>İletişim</span>
                </div>
            </div>

            <div class="fullwidth-block">
                <div class="container">
                    <div class="col-md-5">
                        <div class="contact-details">
                            <div class="contact-info">
                                <iframe width="400"
                                        height="350"
                                        frameborder="0" style="border:0"
                                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBkquZbTtGZ9hsGS9bH6M0UAbS4LOe782E
                                        &q=Beykoz Universitesi" allowfullscreen>
                                </iframe>
                                <address>
                                    <img src="images/icon-marker.png" alt="">
                                    <p>
                                        Beykoz Üniversitesi Kavacık Yerleşkesi <br>
                                        Çubuklu, Vatan Cd. No:69, Beykoz,Istanbul
                                    </p>
                                </address>

                                <a href="#"><img src="images/icon-phone.png" alt="">0216 912 22 52</a>
                                <a href="#"><img src="images/icon-envelope.png" alt="">bilgi@beykoz.edu.tr</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-1">
                        <h2 class="section-title">Bize Ulaşın!</h2>
                        <p>Bu, bazı temel bilgilerin ve bir iletişim formunun yer aldığı bir iletişim sayfasıdır.</p>
                        @*<form action="#Contact" class="contact-form">
            <div class="row">
                <div class="col-md-6"><input type="text" placeholder="Isminiz..." name="Name"></div>
                <div class="col-md-6"><input type="text" placeholder="Email Adresiniz..." name="EmailAddress"></div>
            </div>
            <div class="row">
                <div class="col-md-6"><input type="text" placeholder="Şirket isminiz..." name="CompanyName"></div>
                <div class="col-md-6"><input type="text" placeholder="Website..." name="Website"></div>
            </div>
            <textarea name="Message" placeholder="Mesaj..."></textarea>
            <div class="text-right">
                <input type="submit" placeholder="Mesaj yolla">
            </div>
        </form>*@

                        @using (Html.BeginForm("CreateContact", "Home", FormMethod.Post, new { @class = "contact-form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                @Html.TextBoxFor(m => m.Name, new { placeholder = "Isminiz..." })
                                @Html.ValidationMessageFor(m => m.Name)
                                @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "Mail Adresiniz..." })
                                @Html.ValidationMessageFor(m => m.EmailAddress)
                            </div>

                            <div class="row">
                                @Html.TextBoxFor(m => m.CompanyName, new { placeholder = "Şirket İsminiz..." })
                                @Html.ValidationMessageFor(m => m.CompanyName)
                                @Html.TextBoxFor(m => m.Website, new { placeholder = "Website..." })
                                @Html.ValidationMessageFor(m => m.Website)
                            </div>

                            @Html.TextAreaFor(m => m.Message, new { placeholder = "Mesaj..." })
                            @Html.ValidationMessageFor(m => m.Message)

                            <div class="text-right">
                                <input type="submit" value="Gönder">
                            </div>
                        }
                    </div>
                </div>
            </div>

        </main> <!-- .main-content -->

        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                    </div>
                </div>

                <p class="colophon">Mehmet Mert Bayrak, Yazilim Muhendisligi</p>
            </div>
        </footer> <!-- .site-footer -->
    </div>

    <script src="js/jquery-1.11.1.min.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>
    <script src="js/plugins.js"></script>
    <script src="js/app.js"></script>

</body>

</html>